target 'Rune iOS' do
  use_frameworks!
  platform :ios, '10.3'

  pod 'ReSwift'

  target 'RuneTests' do
      inherit! :search_paths

      pod 'SwiftLint'
      pod 'SwiftFormat/CLI'
    end
end

target 'Rune tvOS' do
  platform :tvos, '10.2'
  use_frameworks!
  pod 'ReSwift'
end

target 'Rune watchOS' do
    platform :watchos, '4.0'
    use_frameworks!
end

target 'Rune watchOS Extension' do
    platform :watchos, '4.0'
    use_frameworks!
    pod 'ReSwift'
end
